// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String               @id @default(uuid())
  name    String
  email   String               @unique
  isAdmin Boolean
  address Json
  test    Unsupported("hello")

  writenPost   Post[] @relation("writtenPost")
  favoritePost Post[] @relation("favoritePost")

  preference UserPreference?
}

model UserPreference {
  id           String  @id @default(uuid())
  emailUpdates Boolean

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])
}

model Post {
  id        String   @id @default(uuid())
  rating    Float
  createdAd DateTime
  updatedAd DateTime

  authorId String
  author   User   @relation("writtenPost", fields: [authorId], references: [id])

  favoriteById String?
  favoriteBy   User?   @relation("favoritePost", fields: [favoriteById], references: [id])

  categories Category[]
}

model Category {
  id   String @id @default(uuid())
  name String

  posts Post[]
}
